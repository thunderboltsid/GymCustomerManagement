<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="true"
    android:id="@+id/mainScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Customer"
        android:id="@+id/addCustomer"
        android:layout_alignTop="@+id/viewCustomers"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Customers"
        android:id="@+id/viewCustomers"
        android:onClick="viewCustomers"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="First Name"
        android:ems="10"
        android:id="@+id/firstName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:clickable="true"
        android:editable="true"
        android:elegantTextHeight="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:enabled="true"
        android:textColor="#ff060053"
        android:textAlignment="center"
        android:visibility="visible"
        android:autoText="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Family Name"
        android:ems="10"
        android:id="@+id/familyName"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:editable="true"
        android:elegantTextHeight="true"
        android:layout_below="@+id/firstName"
        android:layout_alignLeft="@+id/firstName"
        android:layout_alignStart="@+id/firstName"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textAlignment="center"
        android:textColor="#ff060053"
        android:visibility="visible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNumber"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/familyName"
        android:layout_alignLeft="@+id/familyName"
        android:layout_alignStart="@+id/familyName"
        android:textAlignment="center"
        android:text=""
        android:hint="Mobile Number"
        android:textColor="#ff060053"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:elegantTextHeight="true"
        android:editable="true"
        android:clickable="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/managerSelector"
        android:layout_marginTop="52dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/phoneNumber"
        android:layout_alignLeft="@+id/phoneNumber"
        android:layout_alignStart="@+id/phoneNumber"
        android:layout_alignRight="@+id/phoneNumber"
        android:layout_alignEnd="@+id/phoneNumber"
        android:layout_gravity="right|center|left"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</RelativeLayout>
